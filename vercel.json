{
"version": 2,
"builds": [
    {
    "src": "my-vercel-app/package.json",
    "use": "@vercel/static-build",
    "config": { 
        "distDir": "my-vercel-app/build",
        "buildCommand": "cd my-vercel-app && npm install && npm run build"
    }
    },
    {
    "src": "my-vercel-app/api/index.py",
    "use": "@vercel/python"
    }
],
"routes": [
    {
    "src": "/api/(.*)",
    "dest": "my-vercel-app/api/index.py"
    },
    {
    "handle": "filesystem"
    },
    {
    "src": "/(.*)",
    "dest": "my-vercel-app/build/$1"
    }
],
"outputDirectory": "my-vercel-app/build"
}