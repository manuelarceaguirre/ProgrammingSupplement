{
"version": 2,
"builds": [
    {
    "src": "my-vercel-app/package.json",
    "use": "@vercel/static-build",
    "config": { 
        "distDir": "my-vercel-app/build",
        "buildCommand": "cd my-vercel-app && npm install && npm run build"
    }
    },
    {
    "src": "my-vercel-app/api/index.py",
    "use": "@vercel/python"
    }
],
"routes": [
    { "src": "/api/(.*)", "dest": "my-vercel-app/api/index.py" },
    { "src": "^/static/(.*)", "dest": "/static/$1" },
    { "src": ".*", "dest": "/index.html" }
]
}