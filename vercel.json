{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { 
          "distDir": "build"
        }
      },
      {
        "src": "api/index.py",
        "use": "@vercel/python",
        "config": {
          "runtime": "python3.9",
          "maxDuration": 10
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/index.py",
        "methods": ["GET", "POST", "OPTIONS"]
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/(.*)",
        "dest": "/build/$1"
      }
    ]
  }